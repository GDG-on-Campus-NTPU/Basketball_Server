generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model LoginEmailfrequency {
  email         String @unique
  requestTime   DateTime
  times         Int @default(1)
}

model LoginToken {
  email         String
  token         Int
  time          DateTime
  @@unique([email, token])
  @@index([time])
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String   @default("使用者")
}
